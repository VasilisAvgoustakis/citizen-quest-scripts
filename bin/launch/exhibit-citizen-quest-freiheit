#!/bin/bash

set -e
export PATH="/opt/citizen-quest/nodejs/bin:/opt/kiosk-scripts/bin:$PATH"

cd /opt/citizen-quest/citizen-quest-freiheit/dist/server

npm run start & SERVER_PID=$!

sleep 3

kiosk-browser $KIOSK_OPTS --app-name-suffix=cq-freiheit \
    --kiosk --fullscreen --hide-scrollbars --reload-unresponsive 60 \
    --serve /opt/citizen-quest/citizen-quest-freiheit/dist/ \
    "map.html"

kill $SERVER_PID
wait $SERVER_PID
